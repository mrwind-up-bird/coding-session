{# templates/products/products.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
  <h1>Produktliste</h1>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Produktnummer</th>
      <th scope="col">Produktname</th>
      <th scope="col">Preis (inkl. MwSt)</th>
      <th scope="col">Preis (ohne MwSt)</th>
      <th scope="col">Beschreibung</th>
    </tr>
    </thead>
    <tbody>
    {% for item in products %}
    <tr>
      <td scope="row">{{ item.productId }}</td>
      <td>{{ item.productName }}</td>
      <td>{{ (item.productPrice + (item.productPrice * (item.productTaxValue/100)))|number_format(2,',','.') }} € (inkl. {{ item.productTaxValue }}%)</td>
      <td>{{ item.productPrice|number_format(2,',','.') }} € </td>
      <td>{{ item.productDescription }}</td>
    </tr>
    {%  endfor %}
    </tbody>
  </table>
  <hr>
  <a href="/upload" class="btn btn-success">Upload new .csv File</a>
{% endblock %}
